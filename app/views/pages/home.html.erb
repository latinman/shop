<div class="jumbotron text-center">
  <h1>Welcome to tinito</h1>
  <h4 class="slogan">where you can find the cheapest prices online....</h4>
</div>
<div class="row">
  <% if user_signed_in? %>

      <% else %>
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2 class="text-center">Membership</h2>
        <h4>Pay <span class="plan-price">$79.95</span>/year and receive the best prices you can't find.</h4>
        <%= link_to "Sign Up", new_user_registration_path(plan: @pro_plan), class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
      <% if user_signed_in? %>
          <% if current_user.profile %>
            <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user), class: "btn btn-default btn-lg" %><br />
            <%= link_to "View your profile", user_path(current_user), class: "btn btn-default btn-lg" %>
          <% else %>
            <%= link_to "Create your profile", new_user_profile_path(current_user) if current_user %>
        <% end %>
          <% end %>
    </div>
</div>
