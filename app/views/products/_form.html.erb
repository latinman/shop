<div class="row">
  <%= form_for @product, html: { multipart: true } do |f| %>
    <%= f.error_messages %>
      <%= f.hidden_field :product_id %>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.file_field :image %>
      </p>
      <p><%= f.submit "Submit", products_path %></p>
  <% end %>
</div>